{
  "manifest_version": 3,
  "name": "Guard Extension",
  "version": "1.0",
  "description": "Automatically detects phishing URLs using a trained ML model.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "https://guard-extension-api.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
