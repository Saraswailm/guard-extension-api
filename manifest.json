{
  "manifest_version": 3,
  "name": "Fishix",
  "version": "1.0",
  "description": "Pauses suspicious URLs before allowing navigation.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
